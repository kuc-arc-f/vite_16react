{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:copy": "cp -p src/server.js dist",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server && node build.js",
    "clean": "rimraf dist && rimraf server.js",
    "dev": "nodemon",
    "dev:test": "node server.js",
    "preview": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "sirv": "^2.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.3",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  }
}
